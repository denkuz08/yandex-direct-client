{
  "name": "gladyshev/yandex-direct-client",
  "keywords": ["yandex", "direct", "yandex.direct", "client", "api"],
  "description": "Useful Yandex.Direct API client.",
  "type": "library",
  "license": "UNLICENSE",
  "authors": [
    {
      "name": "Dmitry Gladyshev",
      "homepage": "https://github.com/gladyshev"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.2",
    "ext-mbstring": "*",
    "ext-libxml": "*",
    "ext-json":"*",
    "ext-dom":"*",
    "psr/log": "~1.0",
    "psr/http-client": "*",
    "psr/http-message": "*",
    "guzzlehttp/psr7": "~1.7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~8.0.0",
    "squizlabs/php_codesniffer": "~2.9.0",
    "guzzlehttp/guzzle": "~7.2.0",
    "monolog/monolog": "~2.1.1"
  },
  "autoload": {
    "psr-4": {
      "Gladyshev\\Yandex\\Direct\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Yandex\\Direct\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  }
}
